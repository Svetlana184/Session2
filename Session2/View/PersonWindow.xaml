<Window x:Class="Session2.View.PersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:materialIcons ="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        xmlns:local="clr-namespace:Session2.View"
        mc:Ignorable="d"
        Title="PersonWindow" Height="590" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="9.5*"/>
            <RowDefinition Height="0.75*"/>
        </Grid.RowDefinitions>
        <Button  Width="50" HorizontalAlignment="Right" Height="25" Margin="10 5" Content="{materialIcons:MaterialIconExt Kind=Pencil}" ToolTip="Перейти в режим редактирования"/>
        <Button Width="100" HorizontalAlignment="Left" Height="25" Margin="10 5" Content="{materialIcons:MaterialIconExt Kind=Fire}" Click="Button_Click_2" ToolTip="Удалить сотрудника"/>
        <StackPanel Grid.Row="1" Grid.Column="0">
            <TextBox x:Name="SurName" Margin="10  5" materialDesign:HintAssist.Hint="Surname">
            </TextBox>
            <TextBox x:Name="FirstName" Margin="10  5" materialDesign:HintAssist.Hint="First Name">
                <Binding Path="Age">
                    <Binding.ValidationRules>
                        <ExceptionValidationRule />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <TextBox x:Name="SecondName" Margin="10  5" materialDesign:HintAssist.Hint="Second Name"/>
            <TextBox x:Name="Position_" Margin="10  5" materialDesign:HintAssist.Hint="Position"/>
            <TextBox x:Name="Phonework_" Margin="10  5" materialDesign:HintAssist.Hint="Work Phone"/>
            <TextBox x:Name="Phone_" Margin="10  5" materialDesign:HintAssist.Hint="Phone"/>
            <TextBox x:Name="Cabinet_" Margin="10  5" materialDesign:HintAssist.Hint="Cabinet"/>
            <TextBox x:Name="Email_" Margin="10  5" materialDesign:HintAssist.Hint="E-mail"/>
            <TextBox x:Name="Department_" Margin="10  5" materialDesign:HintAssist.Hint="Department"/>
            <ComboBox x:Name="Helper_" Margin="10 5" materialDesign:HintAssist.Hint="Helper"/>
            <ComboBox x:Name="Boss_" Margin="10 5" materialDesign:HintAssist.Hint="Boss"/>
            <DatePicker IsDropDownOpen="True" SelectedDateFormat="Short" Margin="10 5" materialDesign:HintAssist.Hint="Birth Day"/>
            <TextBox x:Name="Other_" Margin="10 5" Height="40" materialDesign:HintAssist.Hint="Other"/>
        </StackPanel>
        <Button Grid.Row="2" Grid.Column="0" Content="Ок" Width="90" HorizontalAlignment="Right" Margin="10 5" Background="Green" Click="Button_Click" Height="25"/>
        <Button  Grid.Row="2" Grid.Column="0" Content="Отмена" Width="90" HorizontalAlignment="Left" Margin="10 5" Click="Button_Click_1" Height="25"/>

        <TabControl x:Name="Calendar_" Grid.Column="1" Grid.Row="0">
            <TabItem x:Name="Past">
                <TabItem.Header>
                    <Button Content="Прошедшие" Width="80" Background="Green" FontSize="11"/>
                </TabItem.Header>
                <TabItem.Content>
                    <ListView  Grid.Column="1" Grid.Row="1">
                        <Label Content="Обучения"/>
                        <TextBox Text="{Binding LearningPast}" Width="350" Background="LightGray"/>
                        <TextBox Text="{Binding LearningPast}" Width="350" Background="LightGray"/>
                        <Label Content="Отгулы"/>
                        <TextBox Text="{Binding SkipDayPast}" Width="350" Background="LightGray"/>
                        <Label Content="Отпуска"/>
                        <TextBox Text="{Binding VacationPast}"/>
                    </ListView>
                </TabItem.Content>
            </TabItem>
            <TabItem x:Name="Present">
                <TabItem.Header>
                    <Button Content="Текущие" Width="80" Background="Green" FontSize="11"/>
                </TabItem.Header>
                <TabItem.Content>
                    <ListView  Grid.Column="1"  Grid.Row="1">
                        <Label Content="Обучения"/>
                        <TextBox Text="{Binding LearningPresent}" Width="350" Background="LightGray"/>
                        <TextBox Text="{Binding LearningPresent}" Width="350" Background="LightGray"/>
                        <Label Content="Отгулы"/>
                        <TextBox Text="{Binding SkipDayPresent}" Width="350" Background="LightGray"/>
                        <Label Content="Отпуска"/>
                        <TextBox Text="{Binding VacationFuture}"/>
                    </ListView>
                </TabItem.Content>
            </TabItem>
            <TabItem x:Name="Future">
                <TabItem.Header>
                    <TextBlock Text="Будущие" Width="100" Background="Green" FontSize="11"/>
                </TabItem.Header>
                <TabItem.Content>
                    <ListView  Grid.Column="1"  Grid.Row="1">
                        <Label Content="Обучения"/>
                        <TextBox Text="{Binding LearningFuture}" Width="350" Background="LightGray"/>
                        <TextBox Text="{Binding LearningFuture}" Width="350" Background="LightGray"/>
                        <Label Content="Отгулы"/>
                        <TextBox Text="{Binding SkipDayPresent}" Width="350" Background="LightGray"/>
                        <Label Content="Отпуска"/>
                        <TextBox Text="{Binding VacationFuture}"/>
                    </ListView>
                </TabItem.Content>
            </TabItem>
        </TabControl>

        
        
    </Grid>
   
</Window>
