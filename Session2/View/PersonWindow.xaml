<Window x:Class="Session2.View.PersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Session2.View"
        mc:Ignorable="d"
        Title="PersonWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions Grid.Column="0">
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ListBox Grid.Column="0" Grid.Row="1" x:Name="PersonList" Width="400" Height="400">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBox Text="{Binding Fio}"/>
                            <TextBox Text="{Binding Phone}"/>
                            <TextBox Text="{Binding BirthDay}"/>
                            <TextBox Text="{Binding Department}"/>
                            <TextBox Text="{Binding Position}"/>
                            <TextBox Text="{Binding Boss}"/>
                            <TextBox Text="{Binding Helper}"/>
                            <TextBox Text="{Binding PhoneWork}"/>
                            <TextBox Text="{Binding Email}"/>
                            <TextBox Text="{Binding Cabinet}"/>
                            <TextBox Text="{Binding Other}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        <Button Grid.Row="2" Grid.Column="0" Content="Ок" Width="100" HorizontalAlignment="Right" Margin="5"/>
        <Button  Grid.Row="2" Grid.Column="0" Content="Отмена" Width="100" HorizontalAlignment="Left" Margin="5"/>
        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal">
            <Button Content="Прошедшие" Width="100" Background="Green" Margin="10 10 10 0"/>
            <Button Content="Текущие" Width="100" Background="Green" Margin="10 10 10 0"/>
            <Button Content="Будущие" Width="100" Background="Green" Margin="10 10 10 0"/>
        </StackPanel>
        <ListView  Grid.Column="1" Grid.Row="1" x:Name="Past">
            <Label Content="Обучения"/>
            <TextBox Text="{Binding LearningPast}"/>
            <TextBox Text="{Binding LearningPast}"/>
            <Label Content="Отгулы"/>
            <TextBox Text="{Binding SkipDayPast}"/>
            <Label Content="Отпуска"/>
            <TextBox Text="{Binding VacationPast}"/>
        </ListView>
        <ListView  Grid.Column="1"  Grid.Row="1" x:Name="Present">
            <Label Content="Обучения"/>
            <TextBox Text="{Binding LearningPresent}"/>
            <TextBox Text="{Binding LearningPresent}"/>
            <Label Content="Отгулы"/>
            <TextBox Text="{Binding SkipDayPresent}"/>
            <Label Content="Отпуска"/>
            <TextBox Text="{Binding VacationFuture}"/>
        </ListView>
        <ListView  Grid.Column="1"  Grid.Row="1" x:Name="Future">
            <Label Content="Обучения"/>
            <TextBox Text="{Binding LearningFuture}"/>
            <TextBox Text="{Binding LearningFuture}"/>
            <Label Content="Отгулы"/>
            <TextBox Text="{Binding SkipDayPresent}"/>
            <Label Content="Отпуска"/>
            <TextBox Text="{Binding VacationFuture}"/>
        </ListView>
    </Grid>
   
</Window>
